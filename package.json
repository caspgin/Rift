{
    "name": "riftelectron",
    "version": "0.0.1",
    "description": "A minimal browser",
    "keywords": [
        "browser",
        "minimal",
        "electron"
    ],
    "license": "ISC",
    "author": "Abidali Sarangwala",
    "type": "commonjs",
    "main": "./dist/main/main.js",
    "scripts": {
        "test": "vitest",
        "watch:main": "tsc -p tsconfig.main.json --watch",
        "build:main": "tsc -p tsconfig.main.json",
        "build:renderer": "tsc -p tsconfig.renderer.json",
        "watch:renderer": "tsc -p tsconfig.renderer.json --watch",
        "copy:html": "copyfiles -E -u 1 ./src/renderer/index.html dist/ --watch",
        "dev": "concurrently \"npm run watch:main\" \"npm run watch:renderer\" \"npm run copy:html\" \"nodemon --watch dist  --exec electron .\"",
        "start": "electron ."
    },
    "devDependencies": {
        "@types/node": "^25.0.3",
        "concurrently": "^9.2.1",
        "copyfiles": "^2.4.1",
        "electron": "^39.2.7",
        "happy-dom": "^20.0.11",
        "nodemon": "^3.1.11",
        "typescript": "^5.9.3",
        "vitest": "^4.0.16"
    }
}
