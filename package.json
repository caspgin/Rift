{
    "name": "riftelectron",
    "version": "0.0.1",
    "description": "A minimal browser",
    "keywords": [
        "browser",
        "minimal",
        "electron"
    ],
    "license": "ISC",
    "author": "Abidali Sarangwala",
    "type": "commonjs",
    "main": "./dist/main/main.js",
    "scripts": {
        "test": "vitest",
        "coverage": "vitest run --coverage --reporter=default --reporter=html",
        "watch:main": "tsc -p tsconfig.main.json --watch",
        "build:main": "tsc -p tsconfig.main.json",
        "build:renderer": "tsc -p tsconfig.renderer.json",
        "watch:renderer": "tsc -p tsconfig.renderer.json --watch",
        "copy:html": "copyfiles -E -u 1 ./src/renderer/index.html dist/ --watch",
        "copy:assets": "copyfiles -E -u 1 ./assets/* dist/assets/ ",
        "dev": " concurrently \"npm run watch:main \" \"npm run watch:renderer\" \"nodemon --watch dist  --exec electron  . \"",
        "build": " concurrently  \"npm run build:main\" \"npm run build:renderer\" \"npm run copy:assets\" \"npm run copy:html\"",
        "profile": "npx electron .  --trace-config-file=trace-config.json --trace-startup-duration=7 ",
        "build:chromeProfile": "electron --remote-debugging-port=9222 . "
    },
    "devDependencies": {
        "@types/node": "^25.0.3",
        "@vitest/coverage-v8": "^4.0.16",
        "@vitest/ui": "^4.0.16",
        "concurrently": "^9.2.1",
        "copyfiles": "^2.4.1",
        "electron": "^39.2.7",
        "happy-dom": "^20.0.11",
        "nodemon": "^3.1.11",
        "typescript": "^5.9.3",
        "vitest": "^4.0.16"
    }
}
