{
    "name": "riftelectron",
    "version": "0.0.1",
    "description": "A minimal browser",
    "keywords": [
        "browser",
        "minimal",
        "electron"
    ],
    "license": "ISC",
    "author": "Abidali Sarangwala",
    "type": "commonjs",
    "main": "./dist/main/main.js",
    "scripts": {
        "watch:main": "tsc -p tsconfig.main.json --watch",
        "build:main": "tsc -p tsconfig.main.json",
        "build:renderer": "tsc -p tsconfig.renderer.json",
        "watch:renderer": "tsc -p tsconfig.renderer.json --watch",
        "dev": "concurrently \"npm run watch:main\" \"nodemon --watch dist --watch src/renderer/index.html --exec electron .\"",
        "start": "electron ."
    },
    "devDependencies": {
        "@types/node": "^25.0.3",
        "concurrently": "^9.2.1",
        "electron": "^39.2.7",
        "nodemon": "^3.1.11",
        "typescript": "^5.9.3"
    }
}
