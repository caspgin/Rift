{
    "name": "riftelectron",
    "version": "0.0.1",
    "description": "A minimal browser",
    "keywords": [
        "browser",
        "minimal",
        "electron"
    ],
    "license": "ISC",
    "author": "Abidali Sarangwala",
    "type": "commonjs",
    "main": "./dist/main/main.js",
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "build": "tsc -p tsconfig.main.json && tsc -p tsconfig.renderer.json",
        "dev": "tsc -p tsconfig.main.json && electron . --remote-debugging-port=9222",
        "start": "npm run build && electron .",
        "watch": "tsc -p tsconfig.main.json --watch",
        "buildMain": "tsc -p tsconfig.main.json"
    },
    "devDependencies": {
        "@types/node": "^25.0.3",
        "electron": "^39.2.7",
        "typescript": "^5.9.3"
    }
}
